#!/bin/bash

# Reload running server(s)

#
# Functions
#

log() {
	if [[ -t 2 ]]; then
		local C0=$'\033[0m'
		local C1=$'\033[31m'
		local C2=$'\033[32m'
		local C3=$'\033[33m'
		local C4=$'\033[34m'
		local C5=$'\033[35m'
		local CB=$'\033[1m'
	fi

	local n="${C0}"
	local c="${C4}"
	local p='*'
	local e=

	while getopts ":ceswd" opt; do
		case "${opt}" in
			c)
				p='✖'
				c="${C1}"
				e=1
				;;
			e)
				p='✖'
				c="${C1}"
				;;
			s)
				p='✔'
				c="${C2}"
				;;
			w)
				p='!'
				c="${C3}"
				;;
			d)
				p='+'
				c="${C5}"
				;;
			*) ;;
		esac
	done
	shift $((OPTIND - 1))
	unset OPTIND

	printf "${n}[${CB}${c}${p}${n}] ${NAME}: %s\n" "${*}" >&2

	if [[ ${e} ]]; then
		exit 1
	fi
}

usage() {
	echo "${USAGE}"
}

#
# Entry
#

NAME="$(basename "${0}")"

USAGE="\
Usage: ${NAME} PID...

Reload running server(s).

Options:
  -h        Show help message and exit."

while getopts ":h" opt; do
	case "${opt}" in
		h)
			usage
			exit
			;;
		:)
			echo "${NAME}: option '-${OPTARG}' requires an argument."
			usage
			exit 1
			;;
		*)
			echo "${NAME}: unknown option '-${OPTARG}'."
			usage
			exit 1
			;;
	esac
done
shift $((OPTIND - 1))
unset OPTIND

if [[ ${#} -le 0 ]]; then
	usage
	exit
fi

for pid in "${@}"; do
	if pgrep "${pid}" &>/dev/null; then
		if kill -HUP "${pid}"; then
			log -s "Server PID: ${pid}"
		else
			log -e "Server PID: ${pid}"
		fi
	else
		log -e "No running server with PID: ${pid}"
	fi
done
